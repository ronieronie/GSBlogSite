<div class="admin-title">
  <h2>Post</h2>
  <a href="/add-post" class="button">+ Add New</a>
</div>

<div class="container" id="container1">
  <ul class="admin-posts">
    <% data.forEach(post => { %>

    <li>
      <div class="column" id="column1">
        <a href="/post/<%= post._id  %>"> <%= post.title %> &nearr; </a>
      </div>
      <div class="column" id="column2">
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
          <form
            action="/delete-post/<%= post._id %>?_method=DELETE"
            method="POST"
          >
            <input type="submit" value="Delete" class="btn" />
          </form>
        </div>
      </div>
    </li>

    <% }) %>
  </ul>
</div>
